<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="appVersion"
            type="String" />

    </data>

    <LinearLayout
        style="@style/RootLayout.WrapHeight"
        android:gravity="center"
        android:paddingStart="@dimen/layout_padding_default"
        android:paddingTop="@dimen/_16sdp"
        android:paddingEnd="@dimen/layout_padding_default"
        android:paddingBottom="@dimen/_16sdp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/layout_margin_default"
                android:src="@drawable/ic_tplogistics"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/TPLogistics.TextAppearance.Primary"
                android:layout_gravity="bottom|end"
                android:text="@{@string/app_version(appVersion)}"
                android:textColor="@color/onPrimary"
                tools:text="Version 1.0" />

        </FrameLayout>

    </LinearLayout>

</layout>