<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.trunnghieu.tplogisticsapplication.utils.constants.TPLogisticsConst.AppLanguage" />

        <variable
            name="currentLanguage"
            type="String" />

    </data>

    <LinearLayout
        style="@style/RootLayout.WrapHeight"
        android:layout_width="wrap_content"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            style="@style/RootLayout.WrapHeight"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_popup_language"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_language_menu" />

        </LinearLayout>

    </LinearLayout>

</layout>